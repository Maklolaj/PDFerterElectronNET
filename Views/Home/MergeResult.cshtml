@model MvcMovie.Models.MyFile
<span>Merge Result</span>

@if (Model == null)
{
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="MergeResult">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input type="file" name="files" multiple />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
}
else
{
    <div>File Name: @Html.DisplayFor(modelItem => modelItem.PdfFile.FileName)</div>

    <div class="top-buffer"></div>
    <div class="panel panel-primary">
        <div class="panel-heading panel-head">Merged File</div>
        <div class="panel-body">

            <table class="table table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th>File</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(modelItem => modelItem.PdfFile.Name)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.PdfFile.Length)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
